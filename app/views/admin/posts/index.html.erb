<h3>文章列表</h3>
<div class="table-responsive">
  <table class="table table-striped" id='posts'>
    <thead>
      <tr>
        <th class="hidden-xs">发表日期</th>
        <th>标题</th>
        <th class="hidden-xs hidden-sm">摘录</th>
        <th class="hidden-xs">评论数</th>
        <th>动作</th>
      </tr>
    </thead>

    <tbody>
      <% if @posts.empty? -%>
        <tr><td colspan="5">当前没有任何页面.</td></tr>
      <% else -%>
        <%= render :partial => 'post', :collection => @posts %>
      <% end -%>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @posts, :renderer => MyBootstrapPagination::Rails %>
  </div>
</div>
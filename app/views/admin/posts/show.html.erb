<div class="postform">
<h3>编辑文章 - <%= link_to_post(@post) %></h3>

<%= semantic_form_for([:admin, @post]) do |form| -%>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <%= form.actions do -%>
    <%= form.action :submit, :as => :button, :button_html => {:class => "btn btn-primary"} -%>
  <% end -%>
<% end -%>
</div>

<div class="postform">
  <h3>编辑评论，作者为 <span class="text-primary"><%= @comment.author %></span></h3>

<%= semantic_form_for([:admin, @comment]) do |form| -%>
  <%= form.inputs do -%>
    <%= form.input :author %>
    <%= form.input :author_email, :required => false %>
    <%= form.input :author_url, :required => false %>
    <%= form.input :body, :hint => "<a href='http://lesstile.rubyforge.org'>支持Lesstile</a>.".html_safe %>
  <% end %>
  <%= form.actions do -%>
    <%= form.action :submit, :as => :button, :button_html => {:class => "btn btn-primary"} %>
  <% end -%>
<% end -%>
</div>
